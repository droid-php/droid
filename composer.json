{
    "name": "droid/droid",
    "description": "Droid: a Taskrunner to Build, Test, CI, deploy your app",
    "homepage": "http://www.github.com/droid-php/droid",
    "keywords": ["php", "droid", "taskrunner", "task-runner", "build", "ci", "continuous integration", "deploy", "linkorb"],
    "type": "library",
    "authors": [
        {
            "name": "LinkORB Engineering",
            "email": "engineering@linkorb.com",
            "role": "Development"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "droid/droid-model": "^1.0.3",
        "symfony/property-access": "^3.1",
        "symfony/console": "~2.7",
        "symfony/expression-language": "^3.1",
        "symfony/yaml": "~2.7",
        "ssh-client/ssh-client": "~0.1",
        "zordius/lightncandy": "~0.93"
    },
    "require-dev": {
        "mikey179/vfsStream": "^1.6",
        "phpunit/phpunit": "^4.8",
        "linkorb/autotune": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "Droid\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Droid\\Test\\": "test/Droid/"
        }
    },
    "bin": ["bin/droid"],
    "license": "MIT"
}
